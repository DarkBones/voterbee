{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    "*.test.js",
    "*.test.jsx"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".jstest",
          ".jsx"
        ],
        "paths": [
          "./src",
          "client/src"
        ]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "airbnb/hooks",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}