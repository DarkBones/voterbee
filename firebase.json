{
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "mv functions/.env functions/.env.dev.local && mv functions/.env.staging.local functions/.env",
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions",
    "postdeploy": [
      "mv functions/.env functions/.env.staging.local && mv functions/.env.dev.local functions/.env"
    ]
  },
  "hosting": {
    "public": "client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "!/@(api)**",
        "destination": "/index.html"
      }
    ]
  }
}